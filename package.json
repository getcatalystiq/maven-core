{
  "name": "maven-core-ts",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:start": "./scripts/dev.sh start",
    "dev:stop": "./scripts/dev.sh stop",
    "dev:restart": "./scripts/dev.sh restart",
    "dev:status": "./scripts/dev.sh status",
    "dev:logs": "./scripts/dev.sh logs",
    "test": "turbo run test",
    "lint": "turbo run lint",
